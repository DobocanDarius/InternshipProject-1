@model IEnumerable<RequestResponseModels.Comments.Response.CommentResponse>

<style>
    .comment-container {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 10px;
        font-size: 15px;
    }

    .comment-text {
        margin-bottom: 10px;
    }

    .form-container {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 15px;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-group textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .form-group button {
        margin-top: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 5px 10px;
        cursor: pointer;
        font-size: 14px;
        transition: background-color 0.2s;
    }

        .form-group button:hover {
            background-color: #0056b3;
        }
</style>

<div class="form-container">
    <form asp-action="CreateComment" method="post">
        <div class="form-group">
            <label for="Text">Your Comment:</label>
            <textarea class="form-control" id="Text" name="Text"></textarea>
        </div>

        <input type="hidden" name="postId" value="@ViewBag.PostId" />

        <button style="margin-top:10px" type="submit" class="btn btn-secondary">Add Comment</button>
    </form>
</div>

@foreach (var item in Model)
{
    <div class="comment-container">
        <div class="comment-text">
            @item.Text
        </div>
    </div>
}
