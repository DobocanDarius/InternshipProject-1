@using RequestResponseModels.Posts.Response
@model IEnumerable<GetPostResponse>
<div>
    @{
        if ((bool)ViewBag.TokenExists)
        {
            <div style="margin-bottom:20px">
                @Html.ActionLink("Create a New Post", "CreatePost", "Post", null, new { @class = "btn btn-primary" })
            </div>
        }
    }
    @foreach (var item in Model)
    {
        <div style="border-bottom-style:outset; display:flex; flex-direction:row; justify-content:space-between;  margin-bottom:10px">
            <div style="display:flex; flex-direction:column; font-size:15px; font-weight: bold;">
                @item.Title
                <p>@item.Body</p>
                <p>Upvotes: @item.UpVotes</p>
            </div>
            <div style="font-size:10px; display:flex; flex-direction:column;">
                <input style="align-self:center;" type="button" value="Comments" onclick="location.href='@Url.Action("CommentByPost", "Comment", new { postId = item.Id })'" />
                <button onclick="location.href='@Url.Action("UpVotePost", "Post", new { postId = item.Id })'">Upvote</button>
            </div>
        </div>
    }

</div>

