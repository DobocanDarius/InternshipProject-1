@using RequestResponseModels.Posts.Request
@model InsertPostRequest

<h2>Create New Post</h2>

<form asp-action="CreatePost" method="post">
    <div class="form-group">
        <label for="Title">Title:</label>
        <input type="text" class="form-control" id="Title" name="Title" asp-for="Title" />
    </div>
    <div class="form-group">
        <label for="Body">Body:</label>
        <textarea class="form-control" id="Body" name="Body" asp-for="Body"></textarea>
    </div>
    <div class="form-group">
        <label for="UserId">User ID:</label>
        <input type="number" class="form-control" id="UserId" name="UserId" asp-for="UserId" />
    </div>
    <div class="form-group">
        <label for="TopicId">Topic ID:</label>
        <input type="number" class="form-control" id="TopicId" name="TopicId" asp-for="TopicId" />
    </div>
    <button type="submit" class="btn btn-primary">Create Post</button>
</form>