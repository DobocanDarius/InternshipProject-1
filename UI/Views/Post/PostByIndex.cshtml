@using RequestResponseModels.Posts.Response
@model IEnumerable<GetPostResponse>

<style>
    .post-container {
        border: 1px solid #ccc;
        border-radius: 25px;
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        flex-direction: column;
    }

    .post-title {
        font-size: 20px;
        font-weight: bold;
        padding-left: 5px;
        margin-bottom: 5px;
    }

    .post-body {
        font-size: 15px;
        display: flex;
        flex-direction:column;
        padding-left: 5px;
    }

    .upvotes {
        font-size: 14px;
        padding-right: 5px;
    }

</style>

<div>
    @foreach (var item in Model)
    {
        <div class="post-container">
            <div class="post-title">
                @item.Title
            </div>
            <div class="post-body">
                @item.Body
                <p class="upvotes">Upvotes: @item.UpVotes</p>
            </div>
            <input type="button" value="Comments" class="btn btn-secondary" onclick="location.href='@Url.Action("CommentByPost", "Comment", new { postId = item.Id })'" />
        </div>
    }
</div>
