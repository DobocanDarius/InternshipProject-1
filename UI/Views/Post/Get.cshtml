@using RequestResponseModels.Posts.Response
@model IEnumerable<GetPostResponse>

<style>
    .post-container {
        border: 2px solid #ccc;
        border-radius: 25px;
        padding: 15px;
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .post-content {
        width: 45%;
        display: flex;
        flex-direction: column;
    }

    .post-title {
        font-size: 20px;
        font-weight: bold;
        padding-left: 5px;
        margin-bottom: 5px;
    }

    .post-body {
        font-size: 15px;
        display: flex;
        flex-direction: column;
        padding-left: 5px;
    }

    .upvotes {
        font-size: 14px;
        padding-right: 5px;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-left: 20px;
        gap: 10px;
    }

    .post-container:hover{
        transition: 0.5s;
        background-color:lightgrey;
    }
</style>

<div>
    @foreach (var item in Model)
    {
        <div class="post-container">
            <div class="post-content">
                <div class="post-title">
                    @item.Title
                </div>
                <div class="post-body">
                    @item.Body
                    <p class="upvotes">Upvotes: @item.UpVotes</p>
                </div>
            </div>
            <div class="action-buttons">
                <a href='@Url.Action("UpdatePost", "Post", new { id = item.Id, title = item.Title, body = item.Body })' class="btn btn-dark">Edit</a>
                <a href='@Url.Action("DeletePost", "Post", new { postId = item.Id })' class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
