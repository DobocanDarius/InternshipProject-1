@using RequestResponseModels.Posts.Response
@model IEnumerable<GetPostResponse>
<div>
    @foreach (var item in Model)
    {
        <div style="display:flex; flex-direction:row; margin-bottom:12px">

             <div style="width:45%; border-style:solid; border-radius: 25px;display:flex; flex-direction:column; margin-bottom:10px">

                    <div style=" font-size:20px; font-weight: bold; padding-left:5px">
                        @item.Title
                    </div>

                 <div style="font-size:15px;display:flex; flex-direction:row; justify-content:space-between; padding-left:5px">
                        @item.Body
                     <p style="padding-right:5px">Upvotes: @item.UpVotes</p>
                 </div>
            
              </div>

            <div style ="display:flex; flex-direction:column; margin-left:20px">
                <a href='@Url.Action("UpdatePost", "Post", new { id = item.Id })'>Edit</a>
                <a href='@Url.Action("DeletePost", "Post", new { postId = item.Id })'>Delete</a>
            </div>
        </div>
    }
</div>