@using RequestResponseModels.Topics.Response
@model IEnumerable<GetTopicResponse>
<div>
    @foreach (var item in Model)
    {
        <div style="border-style: solid; border-radius: 25px;display:flex; flex-direction:column; margin-bottom:10px">

            <div style=" font-size:20px; font-weight: bold; padding-left:5px">
                @item.Id
                <input type="button" value="@item.Text" onclick="location.href='@Url.Action("PostByIndex", "Post", new{ topicId = item.Id})'"/>
            </div>
        </div>
    }

</div>